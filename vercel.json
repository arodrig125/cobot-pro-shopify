{
  "buildCommand": "npm run vercel-build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "remix",
  "outputDirectory": "public",
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true",
    "NODE_ENV": "production"
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/app",
      "permanent": true
    },
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "functions": {
    "api/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
